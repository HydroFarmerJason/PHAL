# PHAL Configuration Example
# Copy to .env and update with your values

# General
NODE_ENV=development
NODE_ID=phal-node-01
LOG_LEVEL=info

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_KEY=your-secret-api-key-here

# Database
DATABASE_URL=postgresql://phal:phal@localhost:5432/phal
REDIS_URL=redis://localhost:6379/0

# Time Series Database
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=phal
INFLUXDB_BUCKET=sensor_data

# Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d
ENCRYPTION_KEY=your-32-byte-encryption-key

# Hardware
DEFAULT_SENSOR_POLL_INTERVAL=5
GPIO_MODE=BCM
I2C_BUS=1

# MQTT (Optional)
MQTT_ENABLED=false
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# AI Integration (Optional)
AI_ENABLED=true
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AI_MODEL_PREFERENCE=claude

# Community Features
IPFS_ENABLED=true
IPFS_GATEWAY=https://ipfs.io
COMMUNITY_FEATURES_ENABLED=true

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
